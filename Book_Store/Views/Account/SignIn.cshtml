@{
    ViewData["Title"] = "Sign In";
}

<div class="container col-4">
    <div class="row d-flex justify-content-center">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
            </div>
            <form class="user">
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="text" class="form-control form-control-user"
                            id="exampleInputEmail" aria-describedby="emailHelp"
                            placeholder="Nhập tên đăng nhập">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-user"
                            id="exampleInputPassword" placeholder="Nhập mật khẩu">
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Lưu đăng nhập</label>
                    </div>
                </div>
                <a asp-controller="" asp-action="" class="btn btn-primary btn-user btn-block px-5 mt-2">
                    Đăng nhập
                </a>
                <hr>
                <a  class="btn btn-google btn-user btn-block">
                    <i class="bi bi-google"></i> Đăng nhập bằng Google
                </a>
                <a  class="btn btn-facebook btn-user btn-block">
                    <i class="bi bi-facebook"></i> Đăng nhập bằng Facebook
                </a>
            </form>
            <hr>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Register" class="small">Quên mật khẩu</a>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Register" class="small">Đăng ký tài khoản</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>